#include <stdio.h>

void main ()
{
	//user choose operator
	char op;
	int x,y;
	printf ("Enter operator either + or - or * or / :");
	fflush (stdout);
	scanf ("%c", &op);
	fflush (stdout);

	//user enter two numbers
	printf ("Enter two numbers: ");
	fflush (stdout);
	scanf ("%f %f ", &x,&y);

	//switch on operator
	switch (op)
	{
	case '+':
	{
		printf ("result = %f",x+y );
	}
	case '-':
		{
			printf ("result = %f",x-y );
		}
	case '*':
		{
			printf ("result = %f",x*y );
		}
	case '/+':
		{
			printf ("result = %f",x/y );
		}
	}

}

