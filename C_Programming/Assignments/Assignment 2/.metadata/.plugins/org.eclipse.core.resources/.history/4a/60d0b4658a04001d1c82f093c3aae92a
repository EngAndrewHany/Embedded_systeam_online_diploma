#include <stdio.h>

void main()
{
	//user enter integer number
	int num,sum,index = 0;
	printf("Enter an integer: ");
	fflush(stdout);
	scanf("%d", &num);
	fflush(stdout);

	//calculate the sum of natural naumbers from 1 to num
	for ( index = 1 ; index <= num ; index++)
	{
		sum +=index;
	}
	printf("sum = %d",sum);

}


